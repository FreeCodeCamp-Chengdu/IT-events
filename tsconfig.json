{
    "compilerOptions": {
        "outDir": "dist/",
        "declaration": true,
        "target": "ES2017",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "jsx": "react",
        "jsxFactory": "createCommand",
        "lib": ["ES2022", "DOM", "DOM.Iterable"]
    },
    "include": ["source/*"],
    "typedocOptions": {
        "name": "IT Events crawler",
        "excludeExternals": true,
        "excludePrivate": true,
        "readme": "./README.md",
        "out": "docs/"
    }
}
